<!-- Provider List Section -->
<section class="page-section">
    <div class="container">
        <form class="edit" action="/providers/update/{{id}}" method="POST">
            <h2 class="text-center mt-0">Edit a Provider</h2>
            <hr class="divider my-4" />
            <div class="col-md-12 px-5">
                <div class="row mx-5">
                    <div class="col-md-6 form-group">
                        <label for="input_first_name">First Name</label>
                        <input type="text" class="form-control" name="first_name" id="input_first_name" value="{{provider.firstname}}" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="input_last_name">Last Name</label>
                        <input type="text" class="form-control" id="input_last_name" name="last_name" value="{{provider.lastname}}" required>
                    </div>
                </div>
                <div class="row mx-5">
                    <div class="col-md-12 form-group">
                        <label for="input_position">Position</label>
                        <input type="text" class="form-control" id="input_position" name="position" value="{{provider.position}}" required>
                    </div>
                </div>
                <div class="row mx-5">
                    <div class="col-md-6 form-group">
                        <label for="input_email">Email</label>
                        <input type="text" class="form-control" id="input_email" name="email" value="{{provider.company.email}}" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="input_phone">Phone</label>
                        <input type="text" class="form-control" id="input_phone" name="phone" value="{{provider.company.phone}}" required>
                    </div>
                </div>
                <hr class="divider my-4" />
                <div class="row mx-5">
                    <div class="col-md-12 form-group">
                        <label for="input_com_name">Company Name</label>
                        <input type="text" class="form-control" id="input_com_name" name="company_name" value="{{provider.company.company_name}}" required>
                    </div>
                </div>
                <div class="row mx-5">
                    <div class="col-md-12 form-group">
                        <label for="input_address">Address</label>
                        <input type="text" class="form-control" id="input_address" name="address" value="{{provider.company.address}}" required>
                    </div>
                </div>
                <div class="row mx-5">
                    <div class="col-md-12 form-group">
                        <label for="input_addres_two">Address 2</label>
                        <input type="text" class="form-control" id="input_addres_two" name="address_two" value="{{provider.company.address2}}">
                    </div>
                </div>
                <div class="row mx-5">
                    <div class="col-md-6 form-group">
                        <label for="input_city">City</label>
                        <input type="text" class="form-control" id="input_city" name="city" value="{{provider.company.city}}" required>
                    </div>
                    <div class="col-md-4 form-group">
                        <label for="input_state">State</label>
                        <input type="text" class="form-control" id="input_state" name="state" value="{{provider.company.state}}" required>
                    </div>
                    <div class="col-md-2 form-group">
                        <label for="input_zip_code">Zip Code</label>
                        <input type="text" class="form-control" id="input_zip_code" name="zip_code" value="{{provider.company.postal_code}}" required>
                    </div>
                </div>
                <div class="row mx-5">
                    <div class="col-md-6 form-group">
                        <label for="input_descr">Description</label>
                        <textarea type="text" class="form-control" id="input_descr" name="description" required>{{provider.company.description}}</textarea>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="input_tag_line">Tag Line</label>
                        <textarea type="text" class="form-control" id="input_tag_line" name="tag_line" required>{{provider.company.tagline}}</textarea>
                    </div>
                </div>
                <div class="row mx-5 px-3">
                    <button class="btn btn-primary btn-block" type="submit" id="btn_update_provider">Update Provider</button>
                </div>
            </div>
        </form>
    </div>
</section>

